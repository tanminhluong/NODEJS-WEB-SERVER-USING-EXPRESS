extends ../layouts/common

block content
	h1 
		span Products
		
	.d-flex.align-items-center
		form.d-flex.ml-auto(action="/users/search", method="GET") 
			input.form-control(type="text", name="q", placeholder="Searching...")
			button.btn.btn-primary Search

	.row
		each product in products
			.col-md-3
				.card(style='width: 18rem;')
					img.card-img-top(src= product.image, alt='Card image cap')
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						a.btn.btn-primary(href='#') Add to cart

	ul.pagination.text-center
		each page in totalPages
			if(page === 'Last')
				li.page-item
					a.page-link(href=`products/` ? `?page=${lastPage}` : ''  )= page
			if(page !== 'Last' && page !== 'First' && page !== 'Next' && page !== 'Prev')
				li.page-item
					a.page-link(href=`products/` ? `?page=${page}` : '')= page
			if(page === 'First')
				li.page-item
					a.page-link(href=`products/` ? `?page=${1}` : '')= page
			if(page === 'Next')
				li.page-item
					a.page-link(href=`products/` ? `?page=${currPage+1}` : '')= page
			if(page === 'Prev')
				li.page-item
					a.page-link(href=`products/` ? `?page=${currPage-1}` : '')= page